# Site Configuration
NEXT_PUBLIC_SITE_URL=https://midtownbook.com
NEXT_PUBLIC_SITE_NAME=Midtown Book

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
# Get these from your Stripe dashboard: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Product IDs (create these in your Stripe dashboard)
STRIPE_BASIC_PRICE_ID=price_basic
STRIPE_PREMIUM_PRICE_ID=price_premium
STRIPE_FEATURED_PRICE_ID=price_featured

# Mailgun Configuration
# Get these from your Mailgun dashboard: https://app.mailgun.com/app/account/security/api_keys
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.midtownbook.com
MAILGUN_FROM_EMAIL=noreply@midtownbook.com

# GoHighLevel Configuration (for marketing emails)
# Get these from your GoHighLevel account
GOHIGHLEVEL_API_KEY=your_gohighlevel_api_key
GOHIGHLEVEL_LOCATION_ID=your_location_id

# Google Maps Configuration
# Get this from Google Cloud Console: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Environment
NODE_ENV=development
